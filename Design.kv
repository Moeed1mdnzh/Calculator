<Button>
	font_size : 37
	background_normal: ''
	background_color : (230/255,230/250,230/255,1)
	color : (50/255,50/255,50/255,1)

<application>
	canvas.before:
		Color:
			rgba : (40/255,40/255,40/255,1)
		Rectangle:
			size : self.size
			pos : self.pos

	BoxLayout:
		orientation: 'horizontal'
		size : root.width,root.height-500
		spacing : 2
		Button:
			text : "C"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 3}
		Button:
			text : "sin"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 3}
		Button:
			text : "cos"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 3}
		Button:
			text : "tan"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 3}
		Button:
			text : "π"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 3}
		Button:
			text : "In"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 2}
		Button:
			text : "log"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 2}
		Button:
			text : "e"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 2}
		Button:
			text : "^"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 2}
		Button:
			text : "√"
			size_hint: (0.5, 0.7)
			pos_hint: {'center_y' : 2}


