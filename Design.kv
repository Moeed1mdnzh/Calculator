<Button>
	font_size: 20


<bootUp>
	BoxLayout:
		orientation: 'vertical'
		size : root.width,root.height
		canvas.before:
			Color:
				rgba : (100/255,100/255,100/255,1)
			Rectangle:
				size : self.size 
				pos : self.pos
		spacing: 2
		TextInput:
			id : phrase
			multiline: True
			halign: 'right'
			font_size: 40
			background_normal : ''
			background_color: (210/255,210/255,210/255,1)
			size_hint: (1, .20)
			foreground_color : (60/255,60/255,60/255,1)
			on_text : root.change_color(self, self.text)
		GridLayout:
			cols : 5
			rows : 8
			spacing : 5
			Button:
				text : "C"
				on_press : root.clear_all()
			Button:
				text : "D"
				on_press : root.rmv_element()
			Button:
				text : "sin"
				on_press : root.add_sign("sin")
			Button:
				text : "cos"
				on_press : root.add_sign("cos")
			Button:
				text : "tan"
				on_press : root.add_sign("tan")
			Button:
				text : "sqrt"
				font_size : 20
				on_press : root.add_sign("sqrt")
			Button:
				text : "log"
				on_press : root.add_sign("log")
			Button:
				text : "e"
				on_press : root.add_sign("e")
			Button:
				text : "π"
				on_press : root.add_sign("π")
			Button:
				text : "^"
				on_press : root.add_sign("^")
			Button:
				text : "7"
				on_press : root.add_number("7")
			Button:
				text : "8"
				on_press : root.add_number("8")
			Button:
				text : "9"
				on_press : root.add_number("9")
			roundButton2:
				text : "÷"
				on_press : root.add_sign("÷")
			roundButton2:
				text : "("
				on_press : root.add_sign("(")
			Button:
				text : "4"
				on_press : root.add_number("4")
			Button:
				text : "5"
				on_press : root.add_number("5")
			Button:
				text : "6"
				on_press : root.add_number("6")
			roundButton2:
				text : "x"
				on_press : root.add_sign("x")
			roundButton2:
				text : ")"
				on_press : root.add_sign(")")
			Button:
				text : "1"
				on_press : root.add_number("1")
			Button:
				text : "2"
				on_press : root.add_number("2")
			Button:
				text : "3"
				on_press : root.add_number("3")
			roundButton2:
				text : "-"
				on_press : root.add_sign("-")
			roundButton2:
				text : "^2"
				on_press : root.add_sign("^2")
			Button:
				text : "0"
				on_press : root.add_number("0")
			Button:
				text : "00"
				on_press : root.add_number("00")
			Button:
				text : "."
				on_press : root.add_sign(".")
			roundButton2:
				text : "+"
				on_press : root.add_sign("+")
			roundButton1:
				text : "="
				on_press : root.calculate()


<roundButton1@Button>
	background_color: (0, 0, 0, 0)
	background_normal: ''
	canvas.before:
		Color : 
			rgba : (250/255, 119/255, 5/255, 1)
		RoundedRectangle:
			size: self.size 
			pos : self.pos 
			radius : [8]

<roundButton2@Button>
	background_color: (0, 0, 0, 0)
	background_normal: ''
	canvas.before:
		Color : 
			rgba : (0.3,0.3,0.3, 1)
		RoundedRectangle:
			size: self.size 
			pos : self.pos 
			radius : [8]
