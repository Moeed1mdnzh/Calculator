<Button>
	font_size: 20


<bootUp>
	BoxLayout:
		orientation: 'vertical'
		size : root.width,root.height
		canvas.before:
			Color:
				rgba : (100/255,100/255,100/255,1)
			Rectangle:
				size : self.size 
				pos : self.pos
		TextInput:
			id : phrase
			multiline: False
			halign: 'right'
			font_size: 60
			background_normal : ''
			background_color: (210/255,210/255,210/255,1)
			size_hint: (1, .40)
			foreground_color : (60/255,60/255,60/255,1)
			on_text : root.change_color(self, self.text)
		GridLayout:
			cols : 5
			rows : 7
			spacing : 5
			Button:
				text : "C"
			Button:
				text : "D"
			Button:
				text : "sin"
			Button:
				text : "cos"
			Button:
				text : "tan"
			Button:
				text : "7"
			Button:
				text : "8"
			Button:
				text : "9"
			Button:
				text : "e"
			Button:
				text : "^"
			Button:
				text : "4"
			Button:
				text : "5"
			Button:
				text : "6"
			Button:
				text : "X"
			Button:
				text : ")"
			Button:
				text : "1"
			Button:
				text : "2"
			Button:
				text : "3"
			Button:
				text : "-"
			Button:
				text : "^2"
			Button:
				text : "0"
			Button:
				text : "00"
			Button:
				text : "."
			Button:
				text : "+"
			Button:
				text : "="
				background_normal: ''
				background_color: (250/255, 119/255, 5/255, 1)
